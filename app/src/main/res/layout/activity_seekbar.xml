<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_seekbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.wildcodeschool.zeuro.ProfilActivity">

    <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
        android:id="@+id/rangeSeekbar1"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:corner_radius="10"
        app:min_value="0"
        app:max_value="100"
        app:gap="0"
        app:bar_color="#F7BB88"
        app:bar_highlight_color="#E07416"
        app:left_thumb_color="#BC340C"
        app:right_thumb_color="#BC340C"
        app:left_thumb_color_pressed="#E07416"
        app:right_thumb_color_pressed="#E07416"
        app:data_type="_integer" />

    <TextView
        android:text="TextView"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_below="@+id/rangeSeekbar1"
        android:id="@+id/Textmin1" />

    <TextView
        android:text="TextView"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_below="@+id/Textmin1"
        android:id="@+id/Textmax1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valider"
        android:id="@+id/idValide"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"/>

</RelativeLayout>
