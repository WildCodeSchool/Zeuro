<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_profil"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fr.wildcodeschool.zeuro.ProfilActivity">

    <Button
        android:background="@drawable/btnreturn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/buttonret" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/buttonret"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/buttonvalidate">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Durée d'appel (H)"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/idAppel"/>

        <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
            android:layout_marginLeft="10dp"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/idSeekAppel"
            app:corner_radius="10"
            app:min_value="1"
            app:max_value="5"
            app:gap="0"
            app:bar_color="#F7BB88"
            app:bar_highlight_color="#E07416"
            app:left_thumb_color="#BC340C"
            app:right_thumb_color="#BC340C"
            app:left_thumb_color_pressed="#E07416"
            app:right_thumb_color_pressed="#E07416"
            app:data_type="_integer" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/Appelmin" />

        <TextView
            android:layout_marginStart="270dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/Appelmax" /></RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Prix(€)"
            android:id="@+id/idPrix"/>

        <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
            android:layout_marginLeft="10dp"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/idSeekPrix"
            app:corner_radius="10"
            app:min_value="0"
            app:max_value="50"
            app:gap="0"
            app:bar_color="#F7BB88"
            app:bar_highlight_color="#E07416"
            app:left_thumb_color="#BC340C"
            app:right_thumb_color="#BC340C"
            app:left_thumb_color_pressed="#E07416"
            app:right_thumb_color_pressed="#E07416"
            app:data_type="_integer" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/Pricemin" />

            <TextView
                android:layout_marginStart="275dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/Pricemax" /></RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Internet(Go)"
            android:id="@+id/idInternet"/>

        <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
            android:layout_marginLeft="10dp"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/idSeekInternet"
            app:corner_radius="10"
            app:min_value="0"
            app:max_value="50"
            app:gap="0"
            app:bar_color="#F7BB88"
            app:bar_highlight_color="#E07416"
            app:left_thumb_color="#BC340C"
            app:right_thumb_color="#BC340C"
            app:left_thumb_color_pressed="#E07416"
            app:right_thumb_color_pressed="#E07416"
            app:data_type="_integer" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/Internetmin" />

            <TextView
                android:layout_marginStart="275dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/Internetmax" /></RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="SMS"
            android:id="@+id/idSMS"/>

        <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
            android:layout_marginLeft="10dp"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/idSeekSMS"
            app:corner_radius="10"
            app:min_value="50"
            app:max_value="1000"
            app:steps="50"
            app:gap="0"
            app:bar_color="#F7BB88"
            app:bar_highlight_color="#E07416"
            app:left_thumb_color="#BC340C"
            app:right_thumb_color="#BC340C"
            app:left_thumb_color_pressed="#E07416"
            app:right_thumb_color_pressed="#E07416"
            app:data_type="_integer" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/Smsmin" />

            <TextView
                android:layout_marginStart="275dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/Smsmax" /></RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="MMS"
            android:id="@+id/idMMS"/>

        <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
            android:layout_marginLeft="10dp"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/idSeekMMS"
            app:corner_radius="10"
            app:min_value="50"
            app:max_value="1000"
            app:gap="0"
            app:steps="50"
            app:bar_color="#F7BB88"
            app:bar_highlight_color="#E07416"
            app:left_thumb_color="#BC340C"
            app:right_thumb_color="#BC340C"
            app:left_thumb_color_pressed="#E07416"
            app:right_thumb_color_pressed="#E07416"
            app:data_type="_integer" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/Mmsmin" />

            <TextView
                android:layout_marginStart="275dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/Mmsmax" /></RelativeLayout>

    </LinearLayout>

    <Button
        android:background="@drawable/checkmark"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/buttonvalidate"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />


</RelativeLayout>