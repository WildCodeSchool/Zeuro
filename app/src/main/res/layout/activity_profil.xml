<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_profil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fr.wildcodeschool.zeuro.ProfilActivity">

    <Button
        android:background="@drawable/btnreturn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/buttonret" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/buttonret"
        android:layout_alignParentStart="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DurÃ©e d'appel"
            android:id="@+id/idAppel"/>

        <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:id="@+id/idSeekAppel"
            app:corner_radius="10"
            app:min_value="0"
            app:max_value="100"
            app:gap="0"
            app:bar_color="#F7BB88"
            app:bar_highlight_color="#E07416"
            app:left_thumb_color="#BC340C"
            app:right_thumb_color="#BC340C"
            app:left_thumb_color_pressed="#E07416"
            app:right_thumb_color_pressed="#E07416"
            app:data_type="_integer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Appelmin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Appelmax" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prix"
            android:id="@+id/idPrix"/>

        <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:id="@+id/idSeekPrix"
            app:corner_radius="10"
            app:min_value="0"
            app:max_value="100"
            app:gap="0"
            app:bar_color="#F7BB88"
            app:bar_highlight_color="#E07416"
            app:left_thumb_color="#BC340C"
            app:right_thumb_color="#BC340C"
            app:left_thumb_color_pressed="#E07416"
            app:right_thumb_color_pressed="#E07416"
            app:data_type="_integer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Pricemin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Pricemax" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Internet"
            android:id="@+id/idInternet"/>

        <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:id="@+id/idSeekInternet"
            app:corner_radius="10"
            app:min_value="0"
            app:max_value="100"
            app:gap="0"
            app:bar_color="#F7BB88"
            app:bar_highlight_color="#E07416"
            app:left_thumb_color="#BC340C"
            app:right_thumb_color="#BC340C"
            app:left_thumb_color_pressed="#E07416"
            app:right_thumb_color_pressed="#E07416"
            app:data_type="_integer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Internetmin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Internetmax" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMS"
            android:id="@+id/idSMS"/>

        <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:id="@+id/idSeekSMS"
            app:corner_radius="10"
            app:min_value="0"
            app:max_value="100"
            app:gap="0"
            app:bar_color="#F7BB88"
            app:bar_highlight_color="#E07416"
            app:left_thumb_color="#BC340C"
            app:right_thumb_color="#BC340C"
            app:left_thumb_color_pressed="#E07416"
            app:right_thumb_color_pressed="#E07416"
            app:data_type="_integer" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/Smsmin" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/Smsmax" />

    </LinearLayout>

    <Button
        android:background="@drawable/btnok"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/buttonvalidate"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />


</RelativeLayout>